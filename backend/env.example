# Stripe API Keys
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Stripe Webhook Secret
# Get this when you create a webhook endpoint in Stripe Dashboard
# https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price ID
# Create a Price in Stripe Dashboard: Products -> Add Product
# Use the price_xxx ID for your $29.99/month subscription
STRIPE_PRICE_ID=price_your_price_id_here

# Paddle API Configuration
# Get these from https://vendors.paddle.com/authentication
# or https://sandbox-vendors.paddle.com/authentication for sandbox
PADDLE_API_KEY=your_paddle_api_key_here
PADDLE_CLIENT_TOKEN=your_paddle_client_token_here

# Paddle Webhook Secret
# Get this when you create a notification destination in Paddle Dashboard
# https://vendors.paddle.com/notifications or sandbox equivalent
PADDLE_WEBHOOK_SECRET=pdl_ntfset_your_webhook_secret_here

# Paddle Price ID
# Create a Price in Paddle Dashboard: Catalog -> Prices
# Use the pri_xxx ID for your $29.99/month subscription
PADDLE_PRICE_ID=pri_your_price_id_here

# Paddle Environment: "sandbox" for testing, "production" for live
PADDLE_ENVIRONMENT=sandbox

# Application URLs
BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:8080

# Trial period (days)
TRIAL_PERIOD_DAYS=3

# Debug mode (set to False in production)
DEBUG=True

